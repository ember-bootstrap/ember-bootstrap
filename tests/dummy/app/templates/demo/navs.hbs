<h1>Navs</h1>

<div class="bs-example">
    {{#bs-form formLayout="inline" model=this as |form|}}
        {{#form.element label="Type" property="type" as |el|}}
            {{#x-select class="form-control" value=el.value id=el.id on-change=(action "updateType") as |xs|}}
                {{#each typeChoices as |choice|}}
                    {{#xs.option value=choice}}{{choice}}{{/xs.option}}
                {{/each}}
            {{/x-select}}
        {{/form.element}}
        {{form.element controlType="checkbox" disabled=(bs-eq type "tabs") label="Stacked" property="stacked" onChange=(action "updateStacked")}}
        {{form.element controlType="checkbox" disabled=stacked label="Justified" property="justified"}}
    {{/bs-form}}
    <hr>
    <!-- BEGIN-SNIPPET nav-demo -->
    {{#bs-nav type=type justified=justified stacked=stacked as |nav|}}
        {{#nav.item}}{{#link-to "index"}}Home{{/link-to}}{{/nav.item}}
        {{#nav.item}}{{#link-to "demo.navs"}}Navs{{/link-to}}{{/nav.item}}
    {{/bs-nav}}
    <!-- END-SNIPPET -->
</div>
<div class="highlight">
    {{code-snippet name="nav-demo.hbs"}}
</div>
