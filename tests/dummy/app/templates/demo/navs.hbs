<div class="bs-example">
  <BsForm @formLayout="inline" @model={{this}} as |form|>
    <form.element
      @controlType="power-select"
      @options={{typeChoices}}
      @label="Type"
      @property="type" as |el|>
      <el.control @searchEnabled />
    </form.element>
    <form.element
      @controlType="checkbox"
      @disabled={{bs-eq type tabs}}
      @label="Stacked"
      @property="stacked"
      @onChange={{action "updateStacked"}}
     />

    <form.element
      @controlType="checkbox"
      @disabled={{stacked}}
      @label="Justified"
      @property="justified"
     />

    <form.element
      @controlType="checkbox"
      @disabled={{stacked}}
      @label="Fill"
      @property="fill"
     />

  </BsForm>
  <hr>
  <!-- BEGIN-SNIPPET nav-demo -->
  <BsNav
    @type={{type}}
    @justified={{justified}}
    @stacked={{stacked}}
    @fill={{fill}} as |nav|
  >
    <nav.item>
      <nav.linkTo>Home</nav.linkTo>
    </nav.item>
    <nav.item>
      <nav.linkTo>navs</nav.linkTo>
    </nav.item>
    <nav.dropdown as |dd|>
      <dd.toggle>
        Dropdown
        <span class="caret"></span>
      </dd.toggle>
      <dd.menu as |ddm|>
        <ddm.item>
          <ddm.linkTo>Home</ddm.linkTo>
        </ddm.item>
        <ddm.item>
          <ddm.linkTo>navs</ddm.linkTo>
        </ddm.item>
      </dd.menu>
    </nav.dropdown>
  </BsNav>
  <!-- END-SNIPPET -->
</div>
<div class="highlight">
  <CodeSnippet @name="nav-demo.hbs" />
</div>
