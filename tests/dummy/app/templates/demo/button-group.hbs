<h2>Checkbox type</h2>

<div class="bs-example">
    <!-- BEGIN-SNIPPET button-group-checkbox-demo -->
    {{#bs-button-group
            value=buttonGroupValue
            type="checkbox"
            onChange=(action (mut buttonGroupValue)) as |bg|}}
        {{#bg.button type="default" value=1}}1{{/bg.button}}
        {{#bg.button type="default" value=2}}2{{/bg.button}}
        {{#bg.button type="default" value=3}}3{{/bg.button}}
    {{/bs-button-group}}
    <p>You selected:</p>
    <ul>
        {{#each buttonGroupValue as |value|}}
            <li>{{value}}</li>
        {{/each}}
    </ul>
    <!-- END-SNIPPET -->
</div>
<div class="highlight">
    {{code-snippet name="button-group-checkbox-demo.hbs"}}
</div>

