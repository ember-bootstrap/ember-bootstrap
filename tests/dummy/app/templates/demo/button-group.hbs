<h2>
  Checkbox type
</h2>
<div class="bs-example">
  <!-- BEGIN-SNIPPET button-group-checkbox-demo -->
  <BsButtonGroup
    value={{buttonGroupValue}}
    @type="checkbox"
    @onChange={{action}} as |bg|
  >
    <Bg.button value="1">
      1
    </Bg.button>
    <Bg.button value="2">
      2
    </Bg.button>
    <Bg.button value="3">
      3
    </Bg.button>
  </BsButtonGroup>
  <p>
    You selected:
  </p>
  <ul>
    {{#each buttonGroupValue as |value|}}
      <li>
        {{value}}
      </li>
    {{/each}}
  </ul>
  <!-- END-SNIPPET -->
</div>
<div class="highlight">
  <CodeSnippet @name="button-group-checkbox-demo.hbs" />
</div>
