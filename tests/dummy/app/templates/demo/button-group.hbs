<h2>
  Checkbox type
</h2>
<div class="bs-example">
  <!-- BEGIN-SNIPPET button-group-checkbox-demo -->
  <BsButtonGroup
    @value={{buttonGroupValue}}
    @type="checkbox"
    @onChange={{action (mut buttonGroupValue)}} as |bg|>
    <bg.button @value="1"> 1 </bg.button>
    <bg.button @value="2"> 2 </bg.button>
    <bg.button @value="3"> 3 </bg.button>
  </BsButtonGroup>
  <p> You selected: </p>
  <ul>
    {{#each buttonGroupValue as |value|}}
      <li> {{value}} </li>
    {{/each}}
  </ul>
  <!-- END-SNIPPET -->
</div>
<div class="highlight">
  <CodeSnippet @name="button-group-checkbox-demo.hbs" />
</div>
