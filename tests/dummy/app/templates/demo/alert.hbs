<h2>
  Options
</h2>
<div class="bs-example">
  <BsForm @formLayout="inline" @model={{this}} as |form|>
    <Form.element
      @controlType="checkbox"
      label="Show/Hide"
      @property="visible"
     />

    <Form.element
      @controlType="checkbox"
      label="Fade animation"
      @property="fade"
     />

    <Form.element
      @controlType="checkbox"
      label="Dismissible"
      @property="dismissible"
     />

    <Form.element
      @controlType="power-select"
      @options={{typeChoices}}
      label="Type"
      @property="type" as |el|
    >
      <El.control @searchEnabled />
    </Form.element>
  </BsForm>
  <hr />
  <!-- BEGIN-SNIPPET alert-options -->
  <BsAlert
    @visible={{visible}}
    @fade={{fade}}
    @type={{type}}
    @dismissible={{dismissible}}
  >
    <strong>
      Well done!
    </strong>
    You successfully read this important alert message.
  </BsAlert>
  <!-- END-SNIPPET -->
</div>
<div class="highlight">
  <CodeSnippet @name="alert-options.hbs" />
</div>