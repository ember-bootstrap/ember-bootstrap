<h2>
  Options
</h2>
<div class="bs-example">
  <BsForm @formLayout="horizontal" @model={{this}} as |form|>
    <form.element @controlType="number" @label="Value" @property="value" />
    <form.element @controlType="number" @label="Min" @property="minValue" />
    <form.element @controlType="number" @label="Max" @property="maxValue" />
    <form.element
      @controlType="power-select"
      @options={{typeChoices}}
      @label="Type"
      @property="type" as |el|>
      <el.control @searchEnabled />
    </form.element>
    <form.element
      @controlType="checkbox"
      @label="Show label"
      @property="showLabel"
     />

    <form.element
      @controlType="number"
      @label="Round to digits"
      @property="roundDigits"
     />

    <form.element @controlType="checkbox" @label="Striped" @property="striped" />
    <form.element
      @controlType="checkbox"
      @disabled={{notStriped}}
      @label="Animate"
      @property="animate"
     />

  </BsForm>
  <hr>
  <!-- BEGIN-SNIPPET progress-options -->
  <BsProgress as |pg|>
    <pg.bar
      @value={{value}}
      @minValue={{minValue}}
      @maxValue={{maxValue}}
      @showLabel={{showLabel}}
      @roundDigits={{roundDigits}}
      @type={{type}}
      @striped={{striped}}
      @animate={{animate}}
     />

  </BsProgress>
  <!-- END-SNIPPET -->
</div>
<div class="highlight">
  <CodeSnippet @name="progress-options.hbs" />
</div>
