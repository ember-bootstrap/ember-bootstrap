<div class="bs-example">
  <!-- BEGIN-SNIPPET dropdown-demo -->
  {{#bs-dropdown tagName="span" as |dd|}}
    {{#dd.toggle}}Dropdown <span class="caret"></span>{{/dd.toggle}}
    {{#dd.menu as |menu|}}
      {{#menu.item}}
        {{#menu.link-to "index"}}Home{{/menu.link-to}}
      {{/menu.item}}
      {{menu.divider}}
      {{#menu.item}}
        {{#menu.link-to "demo.dropdown"}}Dropdowns{{/menu.link-to}}
      {{/menu.item}}
      {{menu.divider}}
      {{#menu.item}}
        <a href="https://example.com" class="dropdown-item">External</a>
      {{/menu.item}}
    {{/dd.menu}}
  {{/bs-dropdown}}
  {{#bs-dropdown direction="up" tagName="span" as |dd|}}
    {{#dd.toggle}}Dropup <span class="caret"></span>{{/dd.toggle}}
    {{#dd.menu align="right" as |menu|}}
      {{#menu.item}}
        {{#menu.link-to "index"}}Home{{/menu.link-to}}
      {{/menu.item}}
      {{menu.divider}}
      {{#menu.item}}
        {{#menu.link-to "demo.dropdown"}}Dropdowns{{/menu.link-to}}
      {{/menu.item}}
    {{/dd.menu}}
  {{/bs-dropdown}}
  <!-- END-SNIPPET -->
</div>
