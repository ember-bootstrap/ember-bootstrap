<h1>Navs</h1>

{{#bs-form model=this as |form|}}
    {{#form.element label="Type" property="type" as |el|}}
        {{#x-select class="form-control" value=el.value id=el.id on-click=(action (mut type)) as |xs|}}
            {{#each typeChoices as |choice|}}
                {{#xs.option value=choice}}{{choice}}{{/xs.option}}
            {{/each}}
        {{/x-select}}
    {{/form.element}}
    {{form.element controlType="checkbox" label="Stacked" property="stacked"}}
    {{form.element controlType="checkbox" label="Justified" property="justified"}}
{{/bs-form}}

<h2>Navs</h2>

{{#bs-nav type=type justified=justified stacked=stacked as |nav|}}
    {{#nav.item}}{{#nav.linkto "alert"}}Alert{{/nav.linkto}}{{/nav.item}}
    {{#nav.item}}{{#nav.linkto "button"}}Buttons{{/nav.linkto}}{{/nav.item}}
    {{#nav.item}}{{#nav.linkto "dropdown"}}Dropdown{{/nav.linkto}}{{/nav.item}}
    {{#nav.item}}{{#nav.linkto "forms"}}Forms{{/nav.linkto}}{{/nav.item}}
    {{#nav.item}}{{#nav.linkto "accordion"}}Accordion{{/nav.linkto}}{{/nav.item}}
    {{#nav.item}}{{#nav.linkto "collapse"}}Collapse{{/nav.linkto}}{{/nav.item}}
    {{#nav.item}}{{#nav.linkto "modal"}}Modals{{/nav.linkto}}{{/nav.item}}
    {{#nav.item}}{{#nav.linkto "progress"}}Progress bars{{/nav.linkto}}{{/nav.item}}
    {{#nav.item}}{{#nav.linkto "navs"}}Navs{{/nav.linkto}}{{/nav.item}}
{{/bs-nav}}
