<h1>Navs</h1>

{{#bs-form model=this as |form|}}
    {{#form.element label="Type" property="type" as |value|}}
        {{#x-select class="form-control" value=value on-click=(action (mut type)) as |xs|}}
            {{#each typeChoices as |choice|}}
                {{#xs.option value=choice}}{{choice}}{{/xs.option}}
            {{/each}}
        {{/x-select}}
    {{/form.element}}
    {{form.element controlType="checkbox" label="Stacked" property="stacked"}}
    {{form.element controlType="checkbox" label="Justified" property="justified"}}
{{/bs-form}}

<h2>Navs</h2>

{{#bs-nav type=type justified=justified stacked=stacked as |nav|}}
    {{#nav.item}}{{#link-to "alert" class="nav-link"}}Alert{{/link-to}}{{/nav.item}}
    {{#nav.item}}{{#link-to "button" class="nav-link"}}Buttons{{/link-to}}{{/nav.item}}
    {{#nav.item}}{{#link-to "dropdown" class="nav-link"}}Dropdown{{/link-to}}{{/nav.item}}
    {{#nav.item}}{{#link-to "forms" class="nav-link"}}Forms{{/link-to}}{{/nav.item}}
    {{#nav.item}}{{#link-to "accordion" class="nav-link"}}Accordion{{/link-to}}{{/nav.item}}
    {{#nav.item}}{{#link-to "collapse" class="nav-link"}}Collapse{{/link-to}}{{/nav.item}}
    {{#nav.item}}{{#link-to "modal" class="nav-link"}}Modals{{/link-to}}{{/nav.item}}
    {{#nav.item}}{{#link-to "progress" class="nav-link"}}Progress bars{{/link-to}}{{/nav.item}}
    {{#nav.item}}{{#link-to "navs" class="nav-link"}}Navs{{/link-to}}{{/nav.item}}
{{/bs-nav}}
