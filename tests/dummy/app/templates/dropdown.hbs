            <ul class="nav navbar-nav navbar-right">
                {{#bs-dropdown tagName="li" as |dd|}}
                    {{#dd.toggle}}Dropdown <span class="caret"></span>{{/dd.toggle}}
                    {{#dd.menu}}
                        <li>{{#link-to "index"}}Home{{/link-to}}</li>
                        <li>{{#link-to "dropdown"}}Dropdowns{{/link-to}}</li>
                    {{/dd.menu}}
                {{/bs-dropdown}}
            </ul>
        </div><!-- /.nav-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<h2>Button dropdowns</h2>

{{#bs-dropdown as |dd|}}
    {{#dd.button}}Dropdown <span class="caret"></span>{{/dd.button}}
    {{#dd.menu}}
        <li>{{#link-to "index"}}Home{{/link-to}}</li>
        <li>{{#link-to "dropdown"}}Dropdowns{{/link-to}}</li>
    {{/dd.menu}}
{{/bs-dropdown}}

{{#bs-dropdown as |dd|}}
    {{#bs-button}}Dropdown{{/bs-button}}
    {{#dd.button}}<span class="caret"></span>{{/dd.button}}
    {{#dd.menu}}
        <li>{{#link-to "index"}}Home{{/link-to}}</li>
        <li>{{#link-to "dropdown"}}Dropdowns{{/link-to}}</li>
    {{/dd.menu}}
{{/bs-dropdown}}

{{#bs-dropdown direction="up" as |dd|}}
  {{#dd.button}}Dropup <span class="caret"></span>{{/dd.button}}
  {{#dd.menu}}
      <li>{{#link-to "index"}}Home{{/link-to}}</li>
      <li>{{#link-to "dropdown"}}Dropdowns{{/link-to}}</li>
  {{/dd.menu}}
{{/bs-dropdown}}

<h2>Do not close on menu click</h2>

{{#bs-dropdown closeOnMenuClick=false as |dd|}}
    {{#dd.button}}Dropdown <span class="caret"></span>{{/dd.button}}
    {{#dd.menu}}
        <li>{{#link-to "index"}}Home{{/link-to}}</li>
        <li>{{#link-to "dropdown"}}Dropdowns{{/link-to}}</li>
    {{/dd.menu}}
{{/bs-dropdown}}
