<div class="row">
    <div class="col-sm-4 col-sm-push-8 col-md-3 col-md-push-9">

        {{#if currentComponent}}
            {{api-reference model=currentComponent}}
        {{/if}}

        <h3>Components</h3>

        {{#bs-nav type="pills" stacked=true as |nav|}}
            {{#each model as |comp|}}
                {{#nav.item}}{{#link-to comp.demoRoute}}{{comp.title}}{{/link-to}}{{/nav.item}}
            {{/each}}
        {{/bs-nav}}
    </div>
    <div class="col-sm-8 col-sm-pull-4 col-md-9 col-md-pull-3">
        {{outlet}}
    </div>
</div>