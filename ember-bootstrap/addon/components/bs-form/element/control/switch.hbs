<input
  type="checkbox"
  id={{@id}}
  disabled={{@disabled}}
  readonly={{@readonly}}
  aria-describedby={{@ariaDescribedBy}}
  checked={{@value}}
  class="{{if (macroCondition (macroGetOwnConfig "isBS5")) "form-check-input" "custom-control-input"}} {{this.formValidationClass}}"
  ...attributes
  {{on "click" this.handleClick}}
>
