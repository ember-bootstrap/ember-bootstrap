{{#if inDom}}
  {{#bs-tooltip/element
    id=overlayId
    placement=placement
    fade=fade
    showHelp=showHelp
    class=class
    renderInPlace=_renderInPlace
    popperTarget=triggerTargetElement
    autoPlacement=autoPlacement
    viewportElement=viewportElement
    viewportPadding=viewportPadding
  }}
    {{#if hasBlock}}
      {{yield
        (hash
          close=(action "close")
        )
      }}
    {{else}}
      {{title}}
    {{/if}}
  {{/bs-tooltip/element}}
{{/if}}
