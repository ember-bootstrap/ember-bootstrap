{{#component layoutComponent
  hasLabel=hasLabel
  formElementId=formElementId
  horizontalLabelGridClass=horizontalLabelGridClass
  errorsComponent=(component errorsComponent
    messages=validationMessages
    show=showValidationMessages
  )
  feedbackIconComponent=(component feedbackIconComponent
    iconName=iconName
    show=hasFeedback
  )
  labelComponent=(component labelComponent
    label=label
    invisibleLabel=invisibleLabel
    formElementId=formElementId
  )
}}
  {{#if hasBlock}}
    {{yield
      (hash
        value=value
        id=formElementId
        validation=validation
      )
    }}
  {{else}}
    {{component controlComponent
      value=value
      onChange=(action onChange model property)
      id=formElementId
      name=name
      type=controlType
      placeholder=placeholder
      autofocus=autofocus
      disabled=disabled
      readonly=readonly
      required=required
      size=size
      tabindex=tabindex
      minlength=minlength
      maxlength=maxlength
      min=min
      max=max
      pattern=pattern
      accept=accept
      autocomplete=autocomplete
      autosave=autosave
      inputmode=inputmode
      multiple=multiple
      step=step
      form=form
      spellcheck=spellcheck
      cols=cols
      rows=rows
      wrap=wrap
      title=title
      onChange=(action "change")
      validationType=_validationType
    }}
  {{/if}}
{{/component}}