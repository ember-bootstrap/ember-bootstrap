{{#if this.inDom}}
  {{#maybe-in-element this.destinationElement this._renderInPlace}}
    {{#let (component this.dialogComponent) as |Dialog|}}
      <Dialog
        @onClose={{action "close"}}
        @fade={{this.fade}}
        @showModal={{this.showModal}}
        @keyboard={{this.keyboard}}
        @size={{@size}}
        @backdropClose={{this.backdropClose}}
        @inDom={{this.inDom}}
        @paddingLeft={{this.paddingLeft}}
        @paddingRight={{this.paddingRight}}
        @centered={{bs-eq this.position "center"}}
        ...attributes
        @class={{@class}}
        @id={{this.modalId}}
      >
        {{yield
          (hash
            header=(component this.headerComponent onClose=(action "close"))
            body=(component this.bodyComponent)
            footer=(component this.footerComponent onClose=(action "close") onSubmit=(action "submit"))
            close=(action "close")
            submit=(action "submit")
          )
        }}
      </Dialog>
    {{/let}}
    <div>
      {{#if this.showBackdrop}}
        <div class="modal-backdrop {{if this.fade "fade"}} {{if this.showModal this.showClass}}" id={{this.backdropId}} ></div>
      {{/if}}
    </div>
  {{/maybe-in-element}}
{{/if}}
