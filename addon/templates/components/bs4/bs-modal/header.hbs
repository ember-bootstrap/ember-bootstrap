{{#if hasBlockParams}}
  {{yield
    (hash
      title=(component titleComponent)
      close=(component closeComponent onClick=(action onClose))
    )
  }}
{{else}}
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{#component titleComponent}}{{title}}{{/component}}
  {{/if}}

  {{#if closeButton}}
    {{component closeComponent onClick=(action onClose)}}
  {{/if}}
{{/if}}

