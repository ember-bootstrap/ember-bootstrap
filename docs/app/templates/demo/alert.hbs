<h2>
  Options
</h2>
<div class="bs-example">
  <BsForm @formLayout="inline" @model={{this.this}} as |form|>
    <form.element
      @controlType="checkbox"
      @label="Show/Hide"
      @property="visible"
      class="mr-2"
    />
    <form.element
      @controlType="checkbox"
      @label="Fade animation"
      @property="fade"
      class="ml-sm-2"
    />

    <form.element
      @controlType="checkbox"
      @label="Dismissible"
      @property="dismissible"
      class="ml-sm-2"
    />
    <form.element
      @controlType="power-select"
      @options={{this.this.typeChoices}}
      @label="Type"
      @property="type"
      class="ml-sm-2"
      as |el|
    >
      <el.control @searchEnabled @class="ml-1" />
    </form.element>
    <form.element @label="Header tag" @property="headerTag" class="ml-sm-2" />
  </BsForm>
  <hr />
  <!-- BEGIN-SNIPPET alert-options -->
  <BsAlert
    @visible={{this.visible}}
    @fade={{this.fade}}
    @type={{this.type}}
    @dismissible={{this.dismissible}}
  >
    <strong> Well done! </strong>
    You successfully read this important alert message.
  </BsAlert>

  <BsAlert
    @visible={{this.visible}}
    @fade={{this.fade}}
    @type={{this.type}}
    @dismissible={{this.dismissible}}
    @headerTag={{this.headerTag}}
  >
    <:header>Well done!</:header>
    <:body>You successfully read this important alert message.</:body>
  </BsAlert>
  <!-- END-SNIPPET -->
</div>
<div class="highlight">
  <CodeSnippet
    @name="alert-options.hbs"
    @dynamicProperties={{hash
      visible=this.visible
      fade=this.fade
      dismissible=this.dismissible
      type=this.type
      headerTag=this.headerTag
    }}
  />
</div>