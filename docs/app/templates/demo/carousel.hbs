<div class="bs-example" data-test-fastboot-container>
  <BsForm @model={{this}} as |form|>
    <div class="row">
      <div class="col-sm-6">
        <form.element @controlType="checkbox" @label="wrap" @property="wrap" />
        <form.element
          @controlType="number"
          @label="index"
          @max="2"
          @min="0"
          @property="index"
        />

        <form.element
          @controlType="number"
          @label="interval"
          @min="1"
          @property="interval"
          data-test-option="interval"
        />

        <form.element
          @controlType="checkbox"
          @label="keyboard"
          @property="keyboard"
        />

      </div>
      <div class="col-sm-6">
        <form.element
          @controlType="checkbox"
          @label="ltr (left to right)"
          @property="ltr"
        />

        <form.element
          @controlType="number"
          @label="Number of slides"
          @max="3"
          @min="0"
          @property="numberOfSlides"
        />

        <form.element
          @controlType="checkbox"
          @label="pauseOnMouseEnter"
          @property="pauseOnMouseEnter"
        />

        <form.element
          @controlType="checkbox"
          @label="showControls"
          @property="showControls"
        />

        <form.element
          @controlType="checkbox"
          @label="showIndicators"
          @property="showIndicators"
        />

      </div>
    </div>
  </BsForm>
  <hr />
  <!-- BEGIN-SNIPPET carousel-demo -->
  <BsCarousel
    @autoPlay={{true}}
    @wrap={{this.wrap}}
    @index={{this.integerIndex}}
    @interval={{this.integerInterval}}
    @keyboard={{this.keyboard}}
    @ltr={{this.ltr}}
    @pauseOnMouseEnter={{this.pauseOnMouseEnter}}
    @showControls={{this.showControls}}
    @showIndicators={{this.showIndicators}}
    data-test-example="main"
    as |car|
  >
    {{#each this.slides as |slide|}}
      <car.slide>
        <img alt={{slide.alt}} src={{slide.src}} />
      </car.slide>
    {{/each}}
  </BsCarousel>
  <!-- END-SNIPPET -->
</div>
<div class="highlight">
  <CodeSnippet
    @name="carousel-demo.hbs"
    @dynamicProperties={{hash
      wrap=this.wrap
      integerIndex=this.integerIndex
      integerInterval=this.integerInterval
      keyboard=this.keyboard
      ltr=this.ltr
      pauseOnMouseEnter=this.pauseOnMouseEnter
      showControls=this.showControls
      showIndicators=this.showIndicators
    }}
  />
</div>
<h2>
  Customizable controls
</h2>
<div class="bs-example">
  <!-- BEGIN-SNIPPET carousel-custom-icons -->
  <BsCarousel
    @nextControlIcon="glyphicon glyphicon-chevron-right"
    @nextControlLabel="Suivant"
    @prevControlIcon="glyphicon glyphicon-chevron-left"
    @prevControlLabel="Précédent"
    as |car|
  >
    <car.slide>
      <img
        alt="First slide"
        src="data:image/svg+xml;base64,"
      />
    </car.slide>
    <car.slide>
      <img
        alt="Second slide"
        src="data:image/svg+xml;base64,"
      />
    </car.slide>
    <car.slide>
      <img
        alt="Third slide"
        src="data:image/svg+xml;base64,"
      />
    </car.slide>
  </BsCarousel>
  <!-- END-SNIPPET -->
</div>
<div class="highlight">
  <CodeSnippet @name="carousel-custom-icons.hbs" />
</div>
<h2>
  Captions
</h2>
<p>
  You can set captions the same way you would do in vanilla bootstrap.
</p>
<div class="bs-example">
  <!-- BEGIN-SNIPPET carousel-custom-controls -->
  <BsCarousel as |car|>
    <car.slide>
      <img
        alt="First slide"
        src="data:image/svg+xml;base64,"
      />
      <div class="carousel-caption">
        First caption
      </div>
    </car.slide>
    <car.slide>
      <img
        alt="Second slide"
        src="data:image/svg+xml;base64,"
      />
      <div class="carousel-caption">
        Second caption
      </div>
    </car.slide>
  </BsCarousel>
  <!-- END-SNIPPET -->
</div>
<div class="highlight">
  <CodeSnippet @name="carousel-custom-controls.hbs" />
</div>